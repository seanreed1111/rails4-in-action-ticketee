= title(@project.name, "Projects")
%header
  %h1= @project.name

  %ul.actions
    %li= link_to "Edit Project", edit_project_path(@project), class: "edit"
    %li= link_to "Delete Project", admin_project_path(@project), method: :delete, data:{confirm: "Are you sure you want to delete this project?"}, class: "delete"

%p
  = @project.description

%header
  %h2 
    Tickets
    %ul.actions
      %li= link_to " New Ticket", new_project_ticket_path(@project), class: "new"

%ul#ticket
  -@project.tickets.each do |ticket|
    %li
      =ticket.id
      =succeed("") do
        =link_to ticket.name, [@project, ticket]
